(* -*- tuareg -*- *)

module J = Jbuild_plugin.V1
;;

let ver = Scanf.sscanf J.ocaml_version "%s@.%s@." (fun maj min -> maj ^ min)
;;

Printf.ksprintf J.send {|
(copy_files# %s/*.ml{,i})

(library
  (name utils)
  (wrapped false)
  (libraries config merlin_utils)
  (modules_without_implementation result_compat))
|} ver
